{
  "compilerOptions": {
    "target": "es5",
    "lib" : [ "es2015", "dom" ],
    "module":"es6",
    "declaration": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./lib",
    "esModuleInterop": true,
    "noImplicitAny": false,
    "removeComments":true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths" : {
      "type-r": ["src"],
      "type-r/globals": ["globals"],
      "type-r/ext-types": ["ext-types"]
    }
  },
  "files":[
    "./src/index.ts"
  ]
}